{
  "env": {
    "browser": true,
    "commonjs": true,
    "es6": true
  },
  "extends": "eslint:recommended",
  "rules": {
    "indent": ["error", 2],
    "linebreak-style": [2, "unix"],
    "quotes": 2,
    "semi": [1, "never"],
    "quote-props": ["warn", "consistent-as-needed", { "keywords": true }],
    "brace-style": "off" // Yes, ESLint json format support commends
  }
}
